{
  "name": "survivor-pool",
  "packageManager": "bun@1.1.26",
  "type": "module",
  "scripts": {
    "db": "docker compose up -d",
    "dev": "ENVIRONMENT=development bun --hot ./src/server.tsx",
    "drizzle": "drizzle-kit push",
    "docker": "docker build . --tag survivor-pool",
    "format": "prettier --write . && terraform fmt terraform",
    "format-check": "prettier --check . && terraform fmt -check terraform",
    "lint": "eslint . --fix --max-warnings=0",
    "preprod": "tailwindcss -o ./public/globals.css",
    "prod": "ENVIRONMENT=production bun ./src/server.tsx",
    "test-backend": "POSTGRES_URL=postgresql://postgres:pwd@localhost:5433/survivor-pool-test bun test",
    "test-frontend": "bun playwright test",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@clerk/clerk-react": "5.4.2",
    "@elysiajs/static": "1.1.0",
    "@headlessui/react": "2.1.3",
    "@tanstack/react-query": "5.52.1",
    "@trpc/client": "next",
    "@trpc/react-query": "next",
    "@trpc/server": "next",
    "drizzle-orm": "0.33.0",
    "elysia": "1.1.7",
    "elysia-hot-module-reload": "1.0.1",
    "elysia-rate-limit": "4.1.0",
    "postgres": "3.4.4",
    "react": "canary",
    "react-dom": "canary",
    "react-error-boundary": "4.0.13",
    "react-router-dom": "6.26.1",
    "spacetime": "7.6.1"
  },
  "devDependencies": {
    "@playwright/experimental-ct-react": "1.46.1",
    "@types/react": "18.3.3",
    "@types/react-dom": "18.3.0",
    "arktype": "1.0.28-alpha",
    "bun-types": "1.1.26",
    "drizzle-kit": "0.24.1",
    "eslint": "9.9.1",
    "eslint-plugin-no-only-tests": "3.3.0",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "husky": "9.1.5",
    "prettier": "3.3.3",
    "prettier-plugin-tailwindcss": "0.6.6",
    "tailwindcss": "3.4.10",
    "typescript": "5.5.4",
    "typescript-eslint": "8.2.0"
  }
}
