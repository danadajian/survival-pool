{
  "name": "survivor-pool",
  "scripts": {
    "db": "docker-compose up -d",
    "dev": "ENVIRONMENT=development bun --hot ./src/server.tsx",
    "drizzle": "drizzle-kit push:pg",
    "docker": "docker build . --tag survivor-pool",
    "format": "prettier --write . && terraform fmt terraform",
    "format-check": "prettier --check . && terraform fmt -check terraform",
    "lint": "eslint . --fix --max-warnings=0",
    "preprod": "tailwindcss -o ./public/globals.css",
    "prod": "ENVIRONMENT=production bun ./src/server.tsx",
    "test": "POSTGRES_URL=postgresql://postgres:pwd@localhost:5433/survivor-pool-test bun test",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@clerk/clerk-react": "4.26.3",
    "@elysiajs/static": "0.7.1",
    "@elysiajs/trpc": "0.7.0",
    "@headlessui/react": "1.7.17",
    "@tanstack/react-query": "4.35.7",
    "@trpc/client": "10.40.0",
    "@trpc/react-query": "10.40.0",
    "@trpc/server": "10.40.0",
    "drizzle-orm": "0.28.6",
    "elysia": "0.7.15",
    "elysia-hot-module-reload": "1.0.1",
    "elysia-rate-limit": "1.2.0",
    "postgres": "3.3.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-router-dom": "6.16.0",
    "spacetime": "7.4.7"
  },
  "devDependencies": {
    "@testing-library/cypress": "10.0.1",
    "@types/react": "~18.2.25",
    "@types/react-dom": "18.2.10",
    "@types/testing-library__cypress": "5.0.10",
    "@typescript-eslint/eslint-plugin": "6.7.4",
    "arktype": "1.0.21-alpha",
    "bun-types": "1.0.4",
    "cypress": "13.3.0",
    "drizzle-kit": "0.19.13",
    "eslint": "8.50.0",
    "eslint-plugin-no-only-tests": "3.1.0",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "husky": "8.0.3",
    "prettier": "3.0.3",
    "prettier-plugin-tailwindcss": "0.5.5",
    "tailwindcss": "3.3.3",
    "typescript": "5.2.2",
    "vite": "4.4.11"
  }
}
