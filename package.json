{
  "name": "survivor-pool",
  "packageManager": "bun@1.0.18",
  "scripts": {
    "db": "docker compose up -d",
    "dev": "ENVIRONMENT=development bun --hot ./src/server.tsx",
    "drizzle": "drizzle-kit push:pg",
    "docker": "docker build . --tag survivor-pool",
    "format": "prettier --write . && terraform fmt terraform",
    "format-check": "prettier --check . && terraform fmt -check terraform",
    "lint": "eslint . --fix --max-warnings=0",
    "preprod": "tailwindcss -o ./public/globals.css",
    "prod": "ENVIRONMENT=production bun ./src/server.tsx",
    "test": "POSTGRES_URL=postgresql://postgres:pwd@localhost:5433/survivor-pool-test bun test",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@clerk/clerk-react": "4.30.2",
    "@elysiajs/static": "0.8.1",
    "@headlessui/react": "1.7.17",
    "@tanstack/react-query": "5.15.0",
    "@trpc/client": "next",
    "@trpc/react-query": "next",
    "@trpc/server": "next",
    "drizzle-orm": "0.29.2",
    "elysia": "0.8.5",
    "elysia-hot-module-reload": "1.0.1",
    "elysia-rate-limit": "2.0.1",
    "postgres": "3.4.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-error-boundary": "4.0.12",
    "react-router-dom": "6.21.1",
    "spacetime": "7.5.0"
  },
  "devDependencies": {
    "@playwright/experimental-ct-react": "1.40.1",
    "@types/react": "18.2.45",
    "@types/react-dom": "18.2.18",
    "@typescript-eslint/eslint-plugin": "6.16.0",
    "arktype": "1.0.28-alpha",
    "bun-types": "1.0.20",
    "drizzle-kit": "0.20.9",
    "eslint": "8.56.0",
    "eslint-plugin-no-only-tests": "3.1.0",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "husky": "8.0.3",
    "prettier": "3.1.1",
    "prettier-plugin-tailwindcss": "0.5.9",
    "tailwindcss": "3.4.0",
    "typescript": "5.3.3"
  }
}
