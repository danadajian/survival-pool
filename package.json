{
  "name": "survivor-pool",
  "scripts": {
    "db": "docker-compose up -d",
    "dev": "ENVIRONMENT=development bun --hot ./src/server.tsx",
    "drizzle": "drizzle-kit push:pg",
    "docker": "docker build . --tag survivor-pool",
    "format": "prettier --write . && terraform fmt terraform",
    "lint": "eslint . --fix --max-warnings=0",
    "preprod": "tailwindcss -o ./public/globals.css",
    "prod": "ENVIRONMENT=production bun ./src/server.tsx",
    "test": "POSTGRES_URL=postgresql://postgres:pwd@localhost:5433/survivor-pool-test bun test",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@clerk/clerk-react": "4.26.6",
    "@elysiajs/static": "0.7.1",
    "@elysiajs/trpc": "0.7.0",
    "@headlessui/react": "1.7.17",
    "@tanstack/react-query": "4.36.1",
    "@trpc/client": "10.41.0",
    "@trpc/react-query": "10.41.0",
    "@trpc/server": "10.41.0",
    "drizzle-orm": "0.28.6",
    "elysia": "0.7.20",
    "elysia-hot-module-reload": "1.0.1",
    "elysia-rate-limit": "1.2.0",
    "postgres": "3.3.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-router-dom": "6.17.0",
    "spacetime": "7.4.8"
  },
  "devDependencies": {
    "@playwright/experimental-ct-react": "1.39.0",
    "@types/react": "18.2.31",
    "@types/react-dom": "18.2.14",
    "@typescript-eslint/eslint-plugin": "6.8.0",
    "arktype": "1.0.24-alpha",
    "bun-types": "1.0.7",
    "drizzle-kit": "0.19.13",
    "eslint": "8.52.0",
    "eslint-plugin-no-only-tests": "3.1.0",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "husky": "8.0.3",
    "prettier": "3.0.3",
    "prettier-plugin-tailwindcss": "0.5.6",
    "tailwindcss": "3.3.3",
    "typescript": "5.2.2"
  }
}
